<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="922dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_primary"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:context=".fragment_movie">



            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/second_primary"
                android:padding="10dp"
                android:text="@string/harry_potter_and_the_sorcerer_s_stone"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/second_primary"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="1dp"
                    android:text="@string/_2001"
                    android:textColor="@color/grey_text" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text="@string/pg"
                    android:textColor="@color/grey_text" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text="@string/_2h_32m"
                    android:textColor="@color/grey_text" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey">

                <!-- ImageView on the left -->
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="101dp"
                    android:layout_height="158dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:src="@drawable/poster1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imageView2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton


                            android:id="@+id/button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="129dp"
                            android:layout_height="30dp"
                            android:layout_margin="15dp"
                            android:padding="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_border_black"
                            android:text="Adventure"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="11sp">
                        </androidx.appcompat.widget.AppCompatButton>

                        <androidx.appcompat.widget.AppCompatButton

                            android:id="@+id/button2"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="114dp"
                            android:layout_height="30dp"
                            android:layout_margin="15dp"
                            android:padding="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_border_black"
                            android:text="Family"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="11sp">
                        </androidx.appcompat.widget.AppCompatButton>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button3"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="113dp"
                            android:layout_height="30dp"
                            android:layout_margin="15dp"
                            android:padding="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_border_black"
                            android:text="Fantasy"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="11sp">
                        </androidx.appcompat.widget.AppCompatButton>

                    </LinearLayout>

                    <!-- TextView below buttons -->
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="81dp"
                        android:layout_marginEnd="10dp"
                        android:padding="10dp"
                        android:text="An orphaned boy enrolls in a school of wizardry, where he learns the truth about himself, his family and the terrible evil that haunts the magical world."
                        android:textColor="@color/grey_text"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/second_primary"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addToWatchlistButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_border"
                    android:drawableStart="@drawable/plus"
                    android:gravity="center|start"
                    android:text="Add to Watchlist"
                    android:textAllCaps="false"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                margin>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button4"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/second_primary"
                    android:drawableTop="@drawable/starr"
                    android:gravity="center"
                    android:text="7.6/10"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button5"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/dark_grey"
                    android:drawableTop="@drawable/star_blue"
                    android:gravity="center"
                    android:text="Rate this"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button6"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/dark_grey"
                    android:drawableTop="@drawable/metascore"
                    android:gravity="center"
                    android:text="Metascore"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/dark_grey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableStart="@drawable/line"
                    android:padding="1dp"
                    android:text="Awards"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="1dp"
                    android:text="Nominated for 3 Oscars"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="1dp"
                    android:text="20 wins and 74 nominations"
                    android:textColor="@color/grey_text"
                    android:textSize="10sp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/dark_grey">

                <TextView
                    android:id="@+id/userReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawableStart="@drawable/line"
                    android:padding="1dp"
                    android:text="User reviews"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey">

                <!-- Left TextView -->
                <TextView
                    android:id="@+id/leftTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="IMDb rating"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Right TextView -->
                <TextView
                    android:id="@+id/rightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="150dp"
                    android:text="Your rating"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey">

                <!-- Left TextView -->
                <TextView
                    android:id="@+id/leftTextView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="8dp"
                    android:drawableLeft="@drawable/starr"
                    android:text="7.6/10"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- Right TextView -->
                <TextView
                    android:id="@+id/rightTextView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="135dp"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/star_blue_small"
                    android:text="Rate this"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    tools:ignore="SmallSp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/dark_grey"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/AddaReview"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_border"
                    android:drawableStart="@drawable/plus"
                    android:gravity="center|start"
                    android:text="Add a review"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_marginTop="10dp"
                android:background="@color/dark_grey"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/line"
                    android:padding="1dp"
                    android:text="Storyline"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="1dp"
                    android:text="Plot summary"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:padding="1dp"
                    android:text="Synopsis"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="1dp"
                    android:text="WARNING: Spoilers"
                    android:textColor="@color/grey_text"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:padding="1dp"
                    android:text="Taglines"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="1dp"
                    android:text="Let The Magic Begin."
                    android:textColor="@color/grey_text"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="1dp"
                    android:text="Genres"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button7"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:padding="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_border_black"
                        android:text="Adventure"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button8"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:padding="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_border_black"
                        android:text="Family"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button9"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="38dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:padding="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_border_black"
                        android:text="Fantasy"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>